<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteStyle">

        <TextView
            android:id="@+id/textViewFasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="fasilitas"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewIdPacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="id packet"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="lokasi"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/bali_tanahlot" />

        <TextView
            android:id="@+id/textViewJudul"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/textViewDeskripsi"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorWhiteStyle"
            tools:text="Judul" />

        <TextView
            android:id="@+id/textViewHarga"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonFavorite"
            android:textColor="@color/colorWhiteStyle"
            tools:text="Harga" />

        <TextView
            android:id="@+id/textViewDeskripsi"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            tools:text="Deskripsi" />


        <ImageButton
            android:id="@+id/buttonFavorite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/textViewDeskripsi"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/buttonShare"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_favorite_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/buttonShare"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/textViewDeskripsi"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_share_black_24dp"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

</android.support.v7.widget.CardView>