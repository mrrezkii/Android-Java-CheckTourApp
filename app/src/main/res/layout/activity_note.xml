<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:theme="@style/AppTheme"
    tools:context="id.sch.smktelkom_mlg.learn.checktourcom.NoteActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/logoku" />

    <TextView
        android:id="@+id/tvVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="IDPACKETNOMERREKENING"
        android:textColor="@color/colorBlackStyle"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tvVoucher"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center|bottom"
        android:text="Serahkan bukti pemesanan ke agent terdekat di kota anda"
        android:textColor="@color/colorBlackStyle"
        android:textSize="15dp" />

</RelativeLayout>
