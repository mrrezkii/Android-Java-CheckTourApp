<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.sch.smktelkom_mlg.learn.checktourcom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".IntroApp.FontChange"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/CheckTourTheme">
        <activity
            android:name=".IntroApp.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivity" />
        <activity
            android:name=".IntroApp.ImageSlider"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".BottomNavigation.NavFamilyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CheckTourTheme" />
        <activity
            android:name=".BottomNavigation.NavStudyTourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CheckTourTheme" />
        <activity
            android:name=".BottomNavigation.NavHoneyMoonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CheckTourTheme" />
        <activity android:name=".DetailActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>